{% extends 'base.html.twig' %}

{% block body %}
    <div class="littlebox">
        <div class="panel panel-default">
            <div class="panel-heading">{%trans%}Forgot password{%endtrans%}</div>
            <div class="panel-body">

                {{ form_start(form, {'action': path('teacher_forgot'), 'method': 'POST', 'autocomplete': 'off'}) }}

                <div class="form-group">
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                    {% if(form.email.vars.errors|length) %}
                        <div class="msg-error">{{ form_errors(form.email) }}</div>
                    {% endif %}
                </div>

                {% for flash_message in app.session.flashbag.get('success') %}
                    <div class="msg-success">
                        {{ flash_message }}
                    </div>
                {% endfor %}


                {% for flash_message in app.session.flashbag.get('error') %}
                    <div class="msg-error">
                        {{ flash_message }}
                    </div>
                {% endfor %}

                {{ form_widget(form._token) }}
                {{ form_widget(form.save) }}
                {{ form_end(form) }}

            </div>
        </div>
    </div>
{% endblock body %}
