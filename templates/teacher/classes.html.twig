{% extends 'teacher.html.twig' %}

{% block title %}{% trans %}Bicheech.com{% endtrans %} {% trans %}Teacher Portal{% endtrans %}{% endblock %}

{% block body %}
<div class="my_content">
    <h3 class="pageHeader">{% trans %}Classes{% endtrans %}<small> {% trans %}organize your students into classes{% endtrans %}</small></h3>

    {% for flash_message in app.session.flashbag.get('success') %}
        <div class="alter-nsg">
            <div class="msg-info">
                {{ flash_message|raw }}
            </div>
        </div>
    {% endfor %}

	<div class="iconBox">
    	<button id="add-class-button" class="btn btn-defualt" title="{% trans %}Create classes to group your students{% endtrans %}">
          <i class="fa fa-plus-circle fa-lg" aria-hidden="true"></i> {% trans %}Create new Class{% endtrans %}
      </button>
    	<a href="{{ path('usercreatepage') }}" class="btn btn-defualt" title="{% trans %}Add or import students to your classes{% endtrans %}"><i class="fa fa-plus-circle fa-lg" aria-hidden="true"></i> {% trans %}Create/ Import Student Accounts{% endtrans %}</a>
	</div>
	<div id="grid"></div>
  {% if app.request.attributes.get('_locale') == 'mn' %}
  <div class="grid-info">Ангийн сурагчидыг харахын тулд <i class="fa fa-search" aria-hidden="true"></i> дээр дарах эсвэл мөрийг хоёр дарна уу</div>
  {% else %}
  <div class="grid-info">Click the <i class="fa fa-search" aria-hidden="true"></i> or double click a row to view a class' students.</div>
  {% endif %}
</div>


{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/font-awesome.min.css') }}">
<link rel="stylesheet" type="text/css" href="{{ asset('resources/css/ext-all.css') }}" />
<link rel="stylesheet" type="text/css" href="{{ asset('resources/css/xtheme-gray.css') }}" />
{% endblock %}

{% block javascripts %}
<script type="text/javascript" src="{{ asset('adapter/ext/ext-base.js') }}"></script>
<script type="text/javascript" src="{{ asset('js/ext-all.js') }}"></script>
<script>
    var groupsData = {{ classes|raw }};
    url = {
        "CLASS_URL": "{{ path('usersgridpage', { 'id': '_cid'}) }}",
        "CLASS_SAVE_URL": "{{ path('classsavepage', { 'id': '_cid'}) }}",
        "CLASS_DELETE_URL": "{{ path('classdeletepage', { 'id': '_cid'}) }}",

    }
    text = {
    "NO": "{% trans %}No{% endtrans %}",
    "YES": "{% trans %}Yes{% endtrans %}",
    "SAVE": "{% trans %}Save{% endtrans %}",
    "CANCEL": "{% trans %}Cancel{% endtrans %}",
    "COURSE": "{% trans %}Course{% endtrans %}",
    "CLASS_NAME":"{% trans %}Class Name{% endtrans %}",
    "STUDENT_CLASS":"{% trans %}Students in Class{% endtrans %}",
    "STUDENTS":"{% trans %}Students{% endtrans %}",
    "VIEW_CLASS":"{% trans %}View and manage students in this class{% endtrans %}",
    "EDIT_CLASS":"{% trans %}Edit class name{% endtrans %}",
    "DELETE_THIS_CLASS": "{% trans %}Delete this class{% endtrans %}",
    "LESSON_NAME": "{% trans %}Lesson Name{% endtrans %}",
    "NO_RESULTS": "{% trans %}You have not yet created any classes{% endtrans %}",
    "NEW_CLASS": "{% trans %}Create new Class{% endtrans %}",
    "EDIT_CLASS_NAME": "{% trans %}Edit Class{% endtrans %}",
