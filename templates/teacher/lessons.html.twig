{% extends 'teacher.html.twig' %}

{% block title %}{% trans %}Bicheech.com{% endtrans %} {% trans %}Teacher Portal{% endtrans %}{% endblock %}

{% block body %}
<div class="my_content">
    <h3 class="pageHeader">{% trans %}Lessons{% endtrans %}<small> {% trans %}bicheech.com's world class typing curriculum{% endtrans %}</small></h3>

    <div id="alert-area"></div>

    <div id="grid"></div>
    <div class="grid-info">Click the <i class="fa fa-search" aria-hidden="true"></i> or double click a row to view lesson content.</div>
</div>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/font-awesome.min.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('resources/css/ext-all.css') }}" />
    <link rel="stylesheet" type="text/css" href="{{ asset('resources/css/xtheme-gray.css') }}" />
    <link rel="stylesheet" href="{{ asset('css/lessons.css') }}">
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('adapter/ext/ext-base.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/ext-all.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/global.js') }}"></script>
    <script>
    url = {"LESSON_VIEW_URL":"{{ path('lessonsviewpage',{'id':'_id','lang':'_languageID'}) }}"};
    text = {
    "COURSE": "{% trans %}Course{% endtrans %}",
    "LESSON_NAME": "{% trans %}Lesson Name{% endtrans %}",
    "VIEW_LESSON": "{% trans %}View Lesson{% endtrans %}",
    "NO_RESULTS": "{% trans %}No results to display{% endtrans %}"
    };
    </script>
    <script type="text/javascript" src="{{ asset('js/lessons.js') }}"></script>
    <script>
    	var lessonsData = {{lessonData|raw}};
    	var role = '';
    	var languageID = '1';
    </script>
{% endblock javascripts %}
